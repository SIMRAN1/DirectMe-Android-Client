<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView1"
        android:textSize="45sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="RAFT" />

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/raft"
         android:layout_margin="20dp"
         android:id="@+id/raftimage"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true" />


    <TextView
        android:text="banana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_below="@+id/raftimage"
        android:layout_toRightOf="@id/textView"
        android:layout_marginLeft="55dp"
        android:id="@+id/banana" />

    <TextView
        android:text="bamboo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banana"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/textView"
        android:id="@+id/bamboo" />

    <TextView
        android:text="Coconut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_below="@+id/raftimage"
        android:layout_toRightOf="@id/banana"
        android:layout_marginLeft="100dp"
        android:id="@+id/Coconut" />

    <TextView
        android:text="Random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banana"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/bamboo"
        android:id="@+id/Random"  />

    <TextView
        android:text="Gold Coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bamboo"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/textView"
        android:id="@+id/gold" />

    <TextView
        android:text="Requirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/textView"
        android:layout_below="@+id/raftimage" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>