<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/img"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="76dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/gold_show"
        android:layout_toRightOf="@+id/showroom"
        android:layout_toEndOf="@+id/showroom">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="76dp"
        android:background="#FFFFFF"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:id="@+id/banana_show"
        android:elevation="2dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/gold_show"
        android:layout_toEndOf="@+id/gold_show">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="76dp"
        android:background="#FFFFFF"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/coconut_show"
        android:elevation="2dp"
        android:layout_toRightOf="@+id/banana_show"
        android:layout_toEndOf="@+id/banana_show">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="76dp"
        android:background="#FFFFFF"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:elevation="2dp"
        android:id="@+id/bamboo_show"
        android:layout_toRightOf="@+id/coconut_show"
        android:layout_toEndOf="@+id/coconut_show">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="76dp"
        android:background="#FFFFFF"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:elevation="2dp"
        android:id="@+id/timber_show"
        android:layout_toRightOf="@+id/bamboo_show"
        android:layout_toEndOf="@+id/bamboo_show">
    </RelativeLayout>

    <RelativeLayout
        android:text="Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:elevation="2dp"
        android:layout_alignBottom="@+id/showroom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#006400"
        android:id="@+id/button" />

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:id="@+id/showroom"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="GARAGE"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:background="#78676767"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/showroom"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/raft"
            android:layout_margin="20dp"
            android:id="@+id/raftimage"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:background="#78676767"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/showroom"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/boatchar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="RAFT"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/boatname"
            android:textColor="#ffffff"
            android:textSize="40sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Characterstics"
            android:id="@+id/chars"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_below="@+id/boatname"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:id="@+id/capacity"
            android:layout_below="@+id/chars"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacityvalue"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#ff0000"
            android:textSize="10sp"
            android:id="@+id/capacityval"
            android:layout_below="@+id/capacity"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filling speed"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:id="@+id/fill"
            android:layout_below="@+id/capacityval"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacityvalue"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#ff0000"
            android:textSize="10sp"
            android:id="@+id/fillval"
            android:layout_below="@+id/fill"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/upgrade"
            android:background="@drawable/upgrade"/>
    </RelativeLayout>


</RelativeLayout>