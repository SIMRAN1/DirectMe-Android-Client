<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/cardview_dark_background"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </android.support.design.widget.CoordinatorLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking"
                android:textColor="#2d435a"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutParkedShip1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/imageViewParkedShip1"
                        android:src="@drawable/ship"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:id="@+id/buttonParkedShip1"
                        android:background="@drawable/abc_popup_background_mtrl_mult" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutParkedShip2"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/imageViewParkedShip2"
                        android:src="@drawable/ship"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:id="@+id/buttonParkedShip2"
                        android:background="@drawable/abc_popup_background_mtrl_mult" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutParkedShip3"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/imageViewParkedShip3"
                        android:src="@drawable/ship"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:id="@+id/buttonParkedShip3"
                        android:background="@drawable/abc_popup_background_mtrl_mult" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non-Parking"
                android:textColor="#2d435a"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutParkedShip4"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/imageViewParkedShip4"
                        android:src="@drawable/ship"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:id="@+id/buttonParkedShip4"
                        android:background="@drawable/abc_popup_background_mtrl_mult" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutParkedShip5"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/imageViewParkedShip5"
                        android:src="@drawable/ship"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:id="@+id/buttonParkedShip5"
                        android:background="@drawable/abc_popup_background_mtrl_mult" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relat">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Slot Details"
            android:id="@+id/heading"
            android:textSize="40dp"
            android:textColor="@color/cardview_light_background"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Allowed"
            android:id="@+id/ft"
            android:layout_below="@+id/heading"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yes"
            android:id="@+id/ftd"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/heading"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:layout_marginLeft="280dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boat Parked"
            android:id="@+id/st"
            android:layout_below="@+id/ft"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yes"
            android:id="@+id/std"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/ft"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:layout_marginLeft="280dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner"
            android:id="@+id/tt"
            android:layout_below="@+id/st"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="simran"
            android:id="@+id/ttd"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/st"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:layout_marginLeft="280dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Island"
            android:id="@+id/fot"
            android:layout_below="@+id/tt"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="banana"
            android:id="@+id/fotd"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tt"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:layout_marginLeft="280dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/fit"
            android:layout_below="@+id/fot"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:00hr"
            android:id="@+id/fitd"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/fot"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:layout_marginLeft="280dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:id="@+id/remove"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/fitd"
            android:layout_marginLeft="150dp"

            />



    </RelativeLayout>
</LinearLayout>
    </ScrollView>